@model MusicWS.Models.DatHang
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<article class="boxRSL">
    <h2 class="border-Bottom">@ViewBag.Message</h2>
    @using (Html.BeginForm())
    {   
        @Html.AntiForgeryToken()
        <fieldset class="border-Bottom">
            <legend>&nbsp;</legend>
                <div class="editor-row">
                    <div class="editor-lable">@Html.LabelFor(model => model.HoKhachHang)</div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.HoKhachHang)
                        @Html.ValidationMessageFor(model => model.HoKhachHang)
                    </div>
                </div>
                <div class="editor-row">
                    <div class="editor-lable">@Html.LabelFor(model => model.TenKhachHang)</div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.TenKhachHang)
                        @Html.ValidationMessageFor(model => model.TenKhachHang)
                    </div>
                </div>
                <div class="editor-row">
                    <div class="editor-lable">@Html.LabelFor(model => model.DiaChi)</div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.DiaChi)
                        @Html.ValidationMessageFor(model => model.DiaChi)
                    </div>
                </div>
                <div class="editor-row">
                    <div class="editor-lable">@Html.LabelFor(model => model.DienThoai)</div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.DienThoai)
                        @Html.ValidationMessageFor(model => model.DienThoai)
                    </div>
                </div>
                <div class="editor-row">
                    <div class="editor-lable">@Html.LabelFor(model => model.Email)</div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="editor-row">
                    @Html.ValidationSummary(true)
                </div>
        </fieldset>
        <footer class="alignR">
            <input type="submit" value="Đặt mua" />
        </footer>
    }

</article>