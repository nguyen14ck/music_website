<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css","~/Content/WebGridStyle.css","~/Content/FormLoginStyle.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@*<section class="searchForm">
    @Html.Partial("_SearchGetPartial")
</section>*@

<body>
    <!--Menu: Start-->
    <nav>
        <section id="login" class="float-left">
            @Html.Partial("_LoginPartial")
        </section>
        <ul id="menu">
            <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
            <li>@Html.ActionLink("Giới thiệu", "About", "Home")</li>
            <li>@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
            <li>@Html.ActionLink("Admin", "Index", "TheLoai")</li>
        </ul>
    </nav>
    <!--Menu: End-->

    <!--Header: Start-->
    <header id="pageHeader">
        <img src="~/Images/VietMusic.png" alt="" height="90" />
    </header>
    <!--Header: End-->
    @*<section class="searchForm">
        @Html.Partial("_SearchPostPartial")
    </section>*@
    <!--body: Start-->
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @{Html.RenderAction("_TheLoaiPartial", "Home");}
            @RenderBody()
        </section>
    </div>
    <!--body: End-->

    <!--Footer: Start-->
    <footer id="pageFooter">
        <div class="content-wrapper" style="text-align:center">
            <div class="float-left">
                <p>&copy;@DateTime.Now.Year -VNMusic ASP.NET MVC4 Appliaction</p>
            </div>
        </div>
    </footer>
    <!--Footer: End-->
</body>
</html>
